{
  "name": "svelte-electron-ts-starter",
  "version": "0.0.1",
  "description": "A template for building Electron apps with Svelte",
  "main": "public/build/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "rollup -cw",
    "build": "rollup -c",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder build",
    "package-all": "npm run build && electron-builder build -mwl",
    "package-linux": "npm run build && electron-builder build --linux",
    "package-win": "npm run build && electron-builder build --win --x64"
  },
  "build": {
    "productName": "My Cool Software",
    "appId": "io.github.nateshmbhat.sampleSvelteProject",
    "extraResources": [
      {
        "from": "static",
        "to": "static"
      }
    ],
    "extraFiles": [
      {
        "from": "resources/icon.ico",
        "to": "resources/icon.ico"
      }
    ],
    "files": [
      "node_modules/",
      "public/",
      "public/build",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "svelte",
    "starter",
    "svelte electron",
    "svelte electron template",
    "electron svelte"
  ],
  "author": {
    "name": "nateshmbhat",
    "email": "nateshmbhatofficial@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0",
    "rollup": "^2.32.1",
    "rollup-plugin-svelte": "^6.1.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "cross-env": "^5.1.6"
  }
}
